<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.artvawe.cordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>cordova-react-boilerplate</name>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- iOS only preferences -->
    <preference name="BackupWebStorage" value="local"/>

    <!-- platform -->
    <engine name="android" spec="6.0.0" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <engine name="ios" spec="4.3.1" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <!-- plugin -->
    <plugin name="cordova-plugin-background-fetch" spec="4.0.0" />
    <plugin name="cordova-plugin-device" spec="1.1.4" />
    
</widget>
